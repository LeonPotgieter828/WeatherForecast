@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to Weathery Weather</h1>
<label>Search Location</label>
<form method="Post">
    <input type="text" placeholder="Search" asp-for="SearchName"/>
    <input type="submit" value="Search"/>
</form>

<container class="current-container">
    <label>Weather of Today</label>
    @foreach (var item in Model.nested.NestedF.Location)
    {
        <p>@item.City</p>
    }
    <p>Temp: @Model.nested.NestedF.CrForecast.Tempareture</p>
    <p>Wind Direction: @Model.nested.NestedF.CrForecast.WindDirection</p>
    <p>Wind Speed: @Model.nested.NestedF.CrForecast.WindSpeed km/h</p>
    <p>Is day or night: @Model.nested.NestedF.CrForecast.DayOrNight</p>
    <p>Weather Code: @Model.nested.NestedF.CrForecast.WeatherCodeString</p>
</container>

<container class="hourly-graph-container">
    @for (int i = 0; i < Model.nested.NestedF.HrForecast.Rain.Count; i++)
    {
        <p>Time: @Model.nested.NestedF.HrForecast.TimeString[i]</p>
        <p>Temp: @Model.nested.NestedF.HrForecast.Temp[i]</p>
        <p>Rain: @Model.nested.NestedF.HrForecast.Rain[i]</p>
    }
</container>

<container class="daily-container">

        @for(int i = 0; i < Model.nested.NestedF.DlForecast.MaxTempareture.Count; i++)
        {
        <div class="dialy-box">
            <p class="date">@Model.nested.NestedF.DlForecast.Date[i]</p>
            <svg class="weather"
                 version="1.1"
                 id="Layer_1"
                 x="0px"
                 y="0px"
                 width="50px"
                 height="50px"
                 viewBox="0 0 100 100"
                 xml:space="preserve">
            <image id="image0"
                   width="100"
                   height="100"
                   x="0"
                   y="0"
                   href="data:image/png;base64,"></image>
        </svg>
            <div class="minmaxContainer">
                <div class="min">
                    <p class="minHeading">min</p>
                    <p class="minTemp">@Model.nested.NestedF.DlForecast.MaxTempareture[i]</p>
                </div>
                <div class="max">
                    <p class="maxHeading">max</p>
                    <p class="maxTemp">@Model.nested.NestedF.DlForecast.MinTempareture[i]</p>
                </div>
            </div>
            <p>Wind Speed: @Model.nested.NestedF.DlForecast.WindSpeed[i]</p>
            <p>Rain Sum: @Model.nested.NestedF.DlForecast.RainSum[i]</p>
        </div>
        }
</container>

@foreach (var item in Model._trend.TempAvg)
{
    <p>Avg Temp: @item</p>
}

<div class="history-container">
    @for (int i = 0; i < Model.nested.NestedH.History.Temp.Count; i++)
    {
        <p>Date Recorded: @Model.nested.NestedH.History.Temp[i]</p>
        <p>Temp: @Model.nested.NestedH.History.Recorded[i]</p>
        <p>Wind Speed: @Model.nested.NestedH.History.WindSpeed[i]</p>
        <p>Rain Sum: @Model.nested.NestedH.History.Rain[i]</p>
    }
</div>


<style>
    .daily-container{
        display: flex;
        column-gap: 10px;
    }

    .dialy-box {
        position: relative;
        width: 220px;
        height: 250px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding: 20px 10px;
        border-radius: 10px;
        backdrop-filter: blur(30px);
        background-color: rgba(65, 65, 65, 0.308);
        border: 1px solid rgba(255, 255, 255, 0.089);
        cursor: pointer;
    }

    .date {
        font-weight: 700;
        font-size: 0.9em;
        letter-spacing: 1.2px;
        color: white;
    }

    .weather {
        font-weight: 500;
        font-size: 0.7em;
        letter-spacing: 1.2px;
        color: rgb(197, 197, 197);
    }

    .temp {
        font-size: 1.8em;
        color: white;
    }

    .minmaxContainer {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .min,
    .max {
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        justify-content: center;
        padding: 0px 20px;
        gap: 4px;
    }

    .max {
        align-items: flex-start;
        border-left: 2px solid white;
    }

    .maxHeading,
    .minHeading {
        font-size: 0.7em;
        font-weight: 600;
        color: white;
    }

    .maxTemp,
    .minTemp {
        font-size: 0.6em;
        font-weight: 500;
        color: white;
    }

    .cardContainer::before {
        width: 100px;
        height: 100px;
        content: "";
        position: absolute;
        background-color: rgb(144, 161, 255);
        z-index: -1;
        border-radius: 50%;
        left: 100px;
        top: 50px;
        transition: all 1s;
    }

    .cardContainer:hover::before {
        transform: translate(-50px, 50px);
    }

</style>





