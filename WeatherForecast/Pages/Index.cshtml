@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center">Welcome to Weathery Weather</h1>
<form class="search-container" method="Post">
    <div class="search-bar">
        <input class="search-input" type="text" placeholder="Search" asp-for="SearchName"/>
        <input class="search-button" type="submit" value="Search"/>
    </div>
</form>

<h2 style="text-align: center">Weather of Today</h2>

<container class="current-container">
    <div class="current-box">
        @foreach (var item in Model.nested.NestedF.Location)
        {
            <h3>Location</h3>
            <p class="location"><span>@item.Region</span>, @item.City</p>
        }
    </div>
    <div class="current-info-box">
        <div class="box">
            <p>Temp: @Model.nested.NestedF.CrForecast.Tempareture</p>
            <p>Wind Direction: @Model.nested.NestedF.CrForecast.WindDirection</p>
        </div>
        <div class="box2">
            <div class="image-icon">
                <img />
            </div>
            <p>Weather Code: @Model.nested.NestedF.CrForecast.WeatherCodeString</p>
        </div>
        <div class="box">
            <p>Wind Speed: @Model.nested.NestedF.CrForecast.WindSpeed km/h</p>
            <p>Is day or night: @Model.nested.NestedF.CrForecast.DayOrNight</p>
        </div>
    </div>
    <div class="hourly-container">
        @for (int i = 0; i < Model.nested.NestedF.HrForecast.Rain.Count; i++)
        {
            <div class="hourly-box">
                <p class="timeHead">@Model.nested.NestedF.HrForecast.TimeString[i]</p>
                <div class="temp-img">
                    <img />
                </div>
                <p>@Model.nested.NestedF.HrForecast.Temp[i]</p>
                <div class="rain-img">
                    <img />
                </div>
                <p>@Model.nested.NestedF.HrForecast.Rain[i]</p>
            </div>
        }
    </div>
</container>



<container class="daily-container">

        @for(int i = 0; i < Model.nested.NestedF.DlForecast.MaxTempareture.Count; i++)
        {
        <div class="daily-box">
            <p class="date">@Model.nested.NestedF.DlForecast.Date[i].ToString("dddd")</p>
            <svg class="weather"
                 version="1.1"
                 id="Layer_1"
                 x="0px"
                 y="0px"
                 width="50px"
                 height="50px"
                 viewBox="0 0 100 100"
                 xml:space="preserve">
            <image id="image0"
                   width="100"
                   height="100"
                   x="0"
                   y="0"
                   href="data:image/png;base64,"></image>
        </svg>
            <div class="minmaxContainer">
                <div class="min">
                    <p class="minHeading">min</p>
                    <p class="minTemp">@Model.nested.NestedF.DlForecast.MaxTempareture[i]</p>
                </div>
                <div class="max">
                    <p class="maxHeading">max</p>
                    <p class="maxTemp">@Model.nested.NestedF.DlForecast.MinTempareture[i]</p>
                </div>
            </div>
            <p class="weather">@Model.nested.NestedF.DlForecast.WindSpeed[i] km/h</p>
            <p class="weather">@Model.nested.NestedF.DlForecast.RainSum[i] mm</p>
        </div>
        }
</container>



<div class="compare-container">
    <div class="con">
        <h4>History Forecast</h4>
        <table class="table">
            <thead>
                <th>Date</th>
                <th>Tempareture</th>
                <th>Wind Speed km/h</th>
                <th>Rain mm</th>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.nested.NestedH.History.Temp.Count; i++)
                {
                    <tr>
                        <td>@Model.nested.NestedH.History.Recorded[i]</td>
                        <td>@Model.nested.NestedH.History.Temp[i]</td>
                        <td>@Model.nested.NestedH.History.WindSpeed[i]</td>
                        <td>@Model.nested.NestedH.History.Rain[i]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div> 
    
    <div class="con">
        <h4>Daily Forecast</h4>
        <table class="table">
            <thead>
                <th>Date</th>
                <th>Tempareture</th>
                <th>Wind Speed km/h</th>
                <th>Rain mm</th>
            </thead>
            <tbody>
                @for (int i = 1; i < Model.nested.NestedF.DlForecast.MaxTempareture.Count; i++)
                {
                    <tr>
                        <td>@Model.nested.NestedF.DlForecast.Date[i]</td>
                        <td>@Model.nested.NestedF.DlForecast.MaxTempareture[i]</td>
                        <td>@Model.nested.NestedF.DlForecast.WindSpeed[i]</td>
                        <td>@Model.nested.NestedF.DlForecast.RainSum[i]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="con2">
        <h4>Averages Daily Forecast</h4>
        <table class="table">
            <thead>
                <th>Average Tempareture</th>
                <th>Average Wind km/h</th>
            </thead>
            <tbody>
                @for (int i = 0; i < Model._trend.TempAvg.Count; i++)
                {
                    <tr>
                        <td>@Model._trend.TempAvg[i]</td>
                        <td>@Model._trend.WindAvg[i]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

